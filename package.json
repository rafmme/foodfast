{
  "name": "foodfast",
  "version": "1.0.0",
  "description": "Fast Food Fast (foodfast) is a fast food delivery service app for a restaurant",
  "main": "app.js",
  "scripts": {
    "build": "npm run clean && npm run build-server",
    "clean": "rimraf dist && mkdir dist",
    "build-server": "babel -d ./dist ./server -s",
    "lint": "eslint \"server/**/*.js\" app.js --fix",
    "precommit": "npm run lint && npm test --no-verify",
    "postinstall": "npm run build",
    "start": "cross-env NODE_ENV=production node dist/app.js",
    "start:dev": "cross-env NODE_ENV=development nodemon --exec babel-node server/app.js",
    "pretest": "cross-env NODE_ENV=test npm run db:migration && npm run seed:db",
    "test": "cross-env NODE_ENV=test nyc --reporter=html --reporter=lcov --reporter=text-lcov --reporter=text mocha ./server/test/**.spec.js --recursive --require babel-polyfill --require babel-register --exit",
    "coverage": "nyc --reporter=lcov --reporter=text-lcov npm run test",
    "drop:tables": "babel-node server/migrations/drop/drop-tables.js",
    "create:tables": "babel-node server/migrations/create/create_tables.js",
    "db:migration": "npm run drop:tables && npm run create:tables",
    "seed:db": "babel-node server/seeders/users.js && babel-node server/seeders/foods.js && babel-node server/seeders/orders.js"
  },
  "repository": {
    "type": "git",
    "url": "https://www.github.com/rafmme/foodfast"
  },
  "keywords": [
    "andela",
    "21",
    "nodejs",
    "rest",
    "api"
  ],
  "author": "Timileyin E Farayola",
  "license": "MIT",
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-stage-0": "^6.24.1",
    "bcrypt": "^2.0.1",
    "body-parser": "^1.18.2",
    "cross-env": "^5.2.0",
    "dotenv": "^5.0.1",
    "express": "^4.16.3",
    "express-validator": "^5.3.0",
    "jsonwebtoken": "^8.3.0",
    "pg": "^7.4.3",
    "rimraf": "^2.6.2",
    "uuid": "^3.3.2",
    "validator": "^9.4.1",
    "volleyball": "^1.4.1"
  },
  "devDependencies": {
    "babel-plugin-transform-es2015-destructuring": "^6.23.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "codeclimate-test-reporter": "^0.5.0",
    "coveralls": "^3.0.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.11.0",
    "husky": "^0.14.3",
    "istanbul": "^0.4.5",
    "mocha": "^5.1.1",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^1.17.3",
    "nyc": "^11.7.1"
  },
  "nyc": {
    "exclude": [
      "server/test",
      "dummyServer/",
      "distDummy/",
      "UI",
      "dist/"
    ]
  }
}
